{
  "name": "x402-stripe",
  "version": "0.1.0",
  "description": "x402 protocol integration with Stripe â€” accept both crypto and fiat payments via HTTP 402",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "stripe:listen": "stripe listen --forward-to localhost:4402/stripe/webhooks"
  },
  "dependencies": {
    "@x402/core": "^2.1.0",
    "@x402/evm": "^2.1.0",
    "@x402/express": "^2.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "stripe": "^17.5.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.0",
    "@types/uuid": "^10.0.0",
    "prettier": "^3.5.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT"
}
